<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- Template -->

	<definition name="Template" template="/WEB-INF/views/inc/layout.jsp">    
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="aside" value="/WEB-INF/views/inc/aside.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
	</definition>
	
	<definition name="NoteTemplate" template="/WEB-INF/views/inc/note/note-layout.jsp">    
		<put-attribute name="header" value="/WEB-INF/views/inc/note/header.jsp" />
		<put-attribute name="aside" value="/WEB-INF/views/inc/aside.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/note/footer.jsp" />
	</definition>


	<!-- Directories Pattern -->

	<definition name="user.*"  template="/WEB-INF/views/inc/user/user-layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/inc/user/header.jsp" />  
		<put-attribute name="main" value="/WEB-INF/views/user/{1}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/user/footer.jsp" />
	</definition>
	
	<definition name="note.*" extends="NoteTemplate">    
		<put-attribute name="main" value="/WEB-INF/views/note/{1}.jsp" />
	</definition>
	
	<definition name="member.note.*" extends="NoteTemplate">
		<put-attribute name="main" value="/WEB-INF/views/member/note/{1}.jsp" />
	</definition>
	
	<definition name="member.*.*" extends="Template">    
		<put-attribute name="main" value="/WEB-INF/views/member/{1}/{2}.jsp" />
	</definition>
	
	<definition name="member.*"  extends="Template">    
		<put-attribute name="main" value="/WEB-INF/views/member/{1}.jsp" />
	</definition>

	<definition name="index" extends="Template">    
		<put-attribute name="main" value="/WEB-INF/views/index.jsp" />
	</definition>
  
</tiles-definitions>